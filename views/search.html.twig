<!DOCTYPE html>
<html>
    <head>
        <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
        <link href="/css/styles.css" rel="stylesheet" type="text/css">
        <title>Search</title>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="jumbotron">Results</h1>
                    {% if output is empty%}
                    <div class="center">
                        <h3>No result found</h3>
                        <h3><a href="/add_word">Click here</a> to add your own word</h3><br>
                    </div>
                    {% endif %}
                    {% if output is not empty %}
                        <div class="center">
                            <h3>Your seach results:</h3><Br>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    {% if output is not empty %}
                        {% for word in output %}
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Your Word</th>
                                        <th>Definition</th>
                                        <th>Example</th>
                                        <th>Region</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td>{{ word.getWord }}</td>
                                        <td>{{ word.getDefinition }}</td>
                                        <td>{{ word.getExample }}</td>
                                        <td>{{ word.getRegion }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        {% endfor %}
                    {% endif %}
                </div>

                <div class="col-sm-6">
                    {% if UK_word is not empty %}
                        {% for uk in UK_word %}
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>UK Word</th>
                                        <th>Definition</th>
                                        <th>Example</th>
                                        <th>Region</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td>{{ uk.getWord }}</td>
                                        <td>{{ uk.getDefinition }}</td>
                                        <td>{{ uk.getExample }}</td>
                                        <td>{{ uk.getRegion }}</td>
                                    </tr>
                                </tbody>
                            </table><br>
                        {% endfor %}
                    {% endif %}

                    <div id="map">
                        <script>
                            function initMap() {
                                var uk = {lat: 55.3781, lng: -3.4360};
                                var map = new google.maps.Map(document.getElementById("map"), {
                                    zoom: 4,
                                    center: uk
                                });
                                var marker = new google.maps.Marker({
                                    position: uk,
                                    map: map
                                });
                            }
                        </script>
                        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDjBg7POcuWbLI8z7wzEvh6bxxn7nWwsCg&callback=initMap
                        ">
                        </script>
                    </div><br>

                    <div id="map2">
                        <script>
                            function initMap() {
                                var us = {lat: 37.0902, lng: -95.7129};
                                var map = new google.maps.Map(document.getElementById("map2"), {
                                    zoom: 4,
                                    center: us
                                });
                                var marker = new google.maps.Marker({
                                    position: us,
                                    map: map
                                });
                            }
                        </script>
                        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDjBg7POcuWbLI8z7wzEvh6bxxn7nWwsCg&callback=initMap
                        ">
                        </script>
                    </div><br>
                </div>

                <div class="col-sm-6">
                    {% if US_word is not empty %}
                        {% for us in US_word %}
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>US Word</th>
                                        <th>Definition</th>
                                        <th>Example</th>
                                        <th>Region</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td>{{ us.getWord }}</td>
                                        <td>{{ us.getDefinition }}</td>
                                        <td>{{ us.getExample }}</td>
                                        <td>{{ us.getRegion }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        {% endfor %}
                    {% endif %}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <form action="/" method="get">
                        <div class="center">
                            <button type="submit" class="btn btn-sm">Home</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
