<!DOCTYPE html>
<html>
    <head>
        <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
        <link href="/css/styles.css" rel="stylesheet" type="text/css">
        <meta charset="utf-8">
        <title>Add Word</title>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="jumbotron">Results</h1>

                    <div class="center">

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    {% if US_word is not empty %}
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>US word</th>
                                        <th>Definition</th>
                                        <th>Example</th>
                                        <th>Region</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                      {% for word in US_word %}
                                        <td>{{ word.getWord }}</td>
                                        <td>{{ word.getDefinition }}</td>
                                        <td>{{ word.getExample }}</td>
                                        <td>{{ word.getRegion }}</td>
                                      {% endfor %}
                                    </tr>
                                </tbody>
                            </table>
                    {% else %}
                    <h4>We don't have a word yet</h4>
                    {% endif %}
                </div>

                <div class="col-sm-6">
                    {% if UK_word is not empty %}
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>UK Word</th>
                                        <th>Definition</th>
                                        <th>Example</th>
                                        <th>Region</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td>{{ UK_word.getWord }}</td>
                                        <td>{{ UK_word.getDefinition }}</td>
                                        <td>{{ UK_word.getExample }}</td>
                                        <td>{{ UK_word.getRegion }}</td>
                                    </tr>
                                </tbody>
                            </table>
                    {% endif %}
                </div>

            <div class="row">
                <div class="col-sm-12">
                    <form action="/" method="get">
                        <div class="center">
                            <button type="submit" class="btn btn-sm">Home</button>
                        </div>
                    </form>
                    </br>
                    <form action="/complete_list" method="get">
                        <div class="center">
                            <button type="submit" class="btn btn-sm">View All</button>
                        </div>
                    </form>
                    </br>
                </div>

                <form action="/add_US_word" method="get">
                    <div class="center">
                        <button type="submit" class="btn btn-sm">Add US Word</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
